{
  "name": "picasso-config-manager-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for managing Picasso tenant configurations in S3",
  "type": "module",
  "main": "index.mjs",
  "scripts": {
    "package": "npm ci --production && zip -r deployment.zip . -x '*.zip' -x 'node_modules/.cache/*'",
    "deploy": "aws lambda update-function-code --function-name Picasso_Config_Manager --zip-file fileb://deployment.zip"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.911.0",
    "@aws-sdk/credential-providers": "^3.911.0"
  }
}
